<% cache(cache_key_for_users) do %>
  <h1>Users</h1>

  <p><%= link_to "New User", new_user_path, class: "btn btn-primary btn-lg", role: "button" %></p>
  <table class="table table-striped table-hover">
    <thead>
      <th>Name</th>
      <th>Email</th>
      <th>Admin?</th>
      <th></th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <% cache(user, current_user) do %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><span class="glyphicon glyphicon-<%= user.administrator? ? "ok" : "remove" %>" aria-hidden="true"></span></td>
            <td>
              <% if can? :edit, user %>
                <div class="btn-group">
                  <%= link_to "Details", user, class: "btn btn-default" %>
                  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                    <span class="caret"></span>
                    <span class="sr-only">Toggle Dropdown</span>
                  </button>
                  <ul class="dropdown-menu" role="menu">
                    <li><%= link_to "Details", user %></li>
                    <li><%= link_to "Edit", edit_user_path(user) %></li>
                    <% if can? :destroy, user %>                    
                      <li class="divider"></li>
                      <li><%= link_to "Destroy", user, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                    <% end %>
                  </ul>
                </div>
              <% else %>
                <%= link_to "Details", user, class: "btn btn-default" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>    
  <p><%= page_entries_info @uploads %></p>
  <%= will_paginate @uploads, renderer: BootstrapPagination::Rails %>
<% end %>
